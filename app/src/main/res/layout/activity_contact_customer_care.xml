<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/cash"
    android:layout_height="match_parent"
    android:scrollbarStyle="insideInset"
    android:scrollbars="vertical"
    tools:context=".ContactCustomerCareActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/app_bar_layout"
            android:id="@+id/contactCustomerCaretoolbar"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_messages"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactCustomerCaretoolbar"
            android:layout_marginTop="20dp">
        </android.support.v7.widget.RecyclerView>
        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Message"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="85"
            tools:layout_editor_absoluteY="57"
            android:layout_marginTop="70dp"
            android:layout_below="@+id/recycler_messages"
            />
        <Button
            android:id="@+id/buttonSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            tools:layout_editor_absoluteX="85"
            tools:layout_editor_absoluteY="57"
            android:layout_below="@+id/editTextMessage"
            />
    </RelativeLayout>
</ScrollView>